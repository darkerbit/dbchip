# Generic template because I got tired of writing these files

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.{c,h,cpp,hpp,cs}]
indent_style = tab
indent_size = 4

[CMakeLists.txt]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 8

[*.{csproj,lua,xml,json}]
indent_style = space
indent_size = 2
